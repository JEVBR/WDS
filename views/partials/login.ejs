
      <h1>Login</h1>
      <form action="/users/login" method="POST">
      <% include messages %>
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />

          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />

        <button type="submit">Login</button>
      </form>
